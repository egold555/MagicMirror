<Window x:Class="MagicMirrorTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicMirrorTest"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None" WindowState="Maximized" KeyDown="Window_KeyDown" Loaded="Window_Loaded" ContentRendered="Window_ContentRendered">
    <Grid Background="#FF101010">
        <DockPanel>
            <MediaElement x:Name="mediaElement" MediaEnded="mediaElement_MediaEnded"/>
        </DockPanel>
        <Label x:Name="labelDebugInfo" Background="#FF101010" DockPanel.Dock="Bottom" Foreground="#FF10FF10" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="48" Content="IP: Waiting..." />
    </Grid>
</Window>
